# ─── Database ────────────────────────────────────────
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://your_username:your_password@localhost:5432/pawparadise_db"

# ─── Authentication ──────────────────────────────────
# JWT secret — use a strong random string (min 10 chars)
# Generate one: node -e "console.log(require('crypto').randomBytes(48).toString('hex'))"
JWT_SECRET="change-me-to-a-random-secret-at-least-10-chars"
JWT_EXPIRES_IN="7d"

# ─── Server ──────────────────────────────────────────
PORT=3001
NODE_ENV="development"

# ─── CORS ────────────────────────────────────────────
# Comma-separated origins for storefront and admin panel
CORS_ORIGIN="http://localhost:5173,http://localhost:5174"
